<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" prefHeight="700.0" prefWidth="1000.0" styleClass="root-pane" stylesheets="@theme.css" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.ahammad_2207084_cvbuilder.InputController">
    <children>
        <VBox fillWidth="true" maxWidth="800.0" minWidth="600.0" prefWidth="800.0" spacing="20.0" styleClass="card">
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
            </padding>
            <children>
                <HBox alignment="CENTER_LEFT" spacing="50.0">
                    <children>
                        <Label styleClass="small-text" text="Total Credit for Semester" />
                        <TextField fx:id="txtTotalCredit" prefWidth="80.0" styleClass="text-field" />

                        <Label fx:id="warning" alignment="CENTER" textFill="RED" />
                    </children>
                    <VBox.margin>
                        <Insets bottom="10.0" />
                    </VBox.margin>
                </HBox>

                <GridPane hgap="10.0" vgap="2.0">
                    <columnConstraints>
                        <ColumnConstraints hgrow="NEVER" minWidth="80.0" prefWidth="90.0" />
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="150.0" prefWidth="220.0" />
                        <ColumnConstraints hgrow="NEVER" minWidth="70.0" prefWidth="70.0" />
                        <ColumnConstraints hgrow="NEVER" minWidth="80.0" prefWidth="80.0" />
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="100.0" prefWidth="150.0" />
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="100.0" prefWidth="150.0" />
                        <ColumnConstraints hgrow="ALWAYS" minWidth="90.0" prefWidth="90.0" />
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="NEVER" />
                        <RowConstraints minHeight="30.0" prefHeight="40.0" vgrow="NEVER" />
                    </rowConstraints>

                    <Label styleClass="small-text" text="Code" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                    <Label styleClass="small-text" text="Course Name" GridPane.columnIndex="1" GridPane.rowIndex="0" />
                    <Label styleClass="small-text" text="Credit" GridPane.columnIndex="2" GridPane.rowIndex="0" />
                    <Label styleClass="small-text" text="Grade" GridPane.columnIndex="3" GridPane.rowIndex="0" />
                    <Label styleClass="small-text" text="Teacher 1" GridPane.columnIndex="4" GridPane.rowIndex="0" />
                    <Label styleClass="small-text" text="Teacher 2" GridPane.columnIndex="5" GridPane.rowIndex="0" />

                    <TextField fx:id="txtCourseCode" prefWidth="90.0" styleClass="text-field" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                    <TextField fx:id="txtCourseName" prefWidth="220.0" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                    <TextField fx:id="txtCourseCredit" prefWidth="70.0" styleClass="text-field" GridPane.columnIndex="2" GridPane.rowIndex="1" />
                    <TextField fx:id="txtTeacher1" prefWidth="150.0" styleClass="text-field" GridPane.columnIndex="4" GridPane.rowIndex="1" />
                    <TextField fx:id="txtTeacher2" prefWidth="150.0" styleClass="text-field" GridPane.columnIndex="5" GridPane.rowIndex="1" />

                    <Button fx:id="addCourse1" minWidth="100.0" mnemonicParsing="false" onAction="#addCourse" prefHeight="86.0" prefWidth="90.0" styleClass="yellow-button" text="Add" textAlignment="CENTER" GridPane.columnIndex="6" GridPane.halignment="RIGHT" GridPane.rowIndex="1" />
               <ComboBox fx:id="txtGrade" prefWidth="80.0" promptText="..." GridPane.columnIndex="3" GridPane.rowIndex="1" />
                </GridPane>

                <TableView fx:id="table" maxHeight="1.7976931348623157E308" prefHeight="250.0">
                    <columns>
                        <TableColumn fx:id="courseCode" text="Course Code" />
                        <TableColumn fx:id="courseName" text="Course Name" />
                        <TableColumn fx:id="courseCredit" text="Credit" />
                        <TableColumn fx:id="grade" text="Grade" />
                        <TableColumn fx:id="teacher1" text="Teacher 1 Name" />
                        <TableColumn fx:id="teacher2" text="Teacher 2 Name" />
                    </columns>
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                    </columnResizePolicy>
                    <VBox.margin>
                        <Insets top="10.0" />
                    </VBox.margin>
                </TableView>
            <VBox spacing="10.0">
               <children>
                  <VBox alignment="CENTER_LEFT">
                     <children>
                        <Label fx:id="buttonWarning" textFill="RED" />
                     </children>
                  </VBox>
      
                      <HBox alignment="CENTER" prefHeight="50.0" spacing="100.0">
                          <children>
                              <Button fx:id="getResult" alignment="CENTER" mnemonicParsing="false" onAction="#getResult" styleClass="yellow-button" text="Calculate GPA" />
                        <Button fx:id="deleteSelected" alignment="CENTER" mnemonicParsing="false" onAction="#deleteSelected" styleClass="yellow-button" text="Delete Selected" />
                              <Button fx:id="clearAll" alignment="CENTER" mnemonicParsing="false" onAction="#clearAll" styleClass="yellow-button" text="Clear All" />
                          </children>
                      </HBox>
               </children>
            </VBox>
            </children>
        </VBox>
    </children>
</VBox>
