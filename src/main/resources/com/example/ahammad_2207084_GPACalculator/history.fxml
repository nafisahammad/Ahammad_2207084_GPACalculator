<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" prefHeight="700.0" prefWidth="1000.0" styleClass="root-pane" stylesheets="@theme.css" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.ahammad_2207084_GPACalculator.HistoryController">
    <children>
        <VBox alignment="TOP_CENTER" fillWidth="false" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefWidth="750.0" spacing="20.0" styleClass="card">
            <children>

                <Label styleClass="title" text="GPA Calculation History" />

                <VBox spacing="10.0">
                    <HBox alignment="CENTER_LEFT" spacing="10.0">
                        <Label styleClass="small-text" text="Search by Roll:" />
                        <TextField fx:id="txtRollSearch" prefWidth="180.0" promptText="Enter Student Roll/ID" styleClass="text-field" />
                        <Button mnemonicParsing="false" onAction="#searchByRoll" styleClass="yellow-button" text="Search Roll" />
                    </HBox>

                    <HBox alignment="CENTER_LEFT" spacing="10.0">
                        <Label styleClass="small-text" text="Search by Semester:" />
                        <TextField fx:id="txtSemesterSearch" prefWidth="180.0" promptText="Enter Semester Reference" styleClass="text-field" />
                        <Button mnemonicParsing="false" onAction="#searchBySemester" styleClass="yellow-button" text="Search Semester" />
                    </HBox>

                    <HBox alignment="CENTER_LEFT" spacing="10.0">
                        <Button mnemonicParsing="false" onAction="#resetSearch" styleClass="outline-button" text="Show All History" HBox.hgrow="ALWAYS" />
                        <HBox alignment="CENTER_LEFT" prefWidth="120.0" HBox.hgrow="ALWAYS" /> </HBox>
                </VBox>
                <TableView fx:id="historyTable" prefHeight="400.0" prefWidth="600.0" styleClass="table-view">
                    <columns>
                        <TableColumn fx:id="colRoll" maxWidth="150.0" minWidth="100.0" prefWidth="120.0" text="Roll" />
                        <TableColumn fx:id="colSemester" maxWidth="200.0" minWidth="120.0" prefWidth="140.0" text="Semester" />
                        <TableColumn fx:id="colGPA" maxWidth="100.0" minWidth="70.0" prefWidth="80.0" text="GPA" />
                        <TableColumn fx:id="colShowList" maxWidth="200.0" minWidth="120.0" prefWidth="160.0" text="Course List" />
                    </columns>
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                    </columnResizePolicy>
                </TableView>

                <HBox alignment="CENTER" spacing="20.0">
                    <Button fx:id="backButton" mnemonicParsing="false" onAction="#toBack" styleClass="outline-button" text="Back to Calculator" />
               <Button mnemonicParsing="false" onAction="#deleteSelectedEntry" styleClass="yellow-button" text="Remove Selected" />
                    <Button fx:id="clearHistoryButton" mnemonicParsing="false" onAction="#clearHistory" styleClass="yellow-button" text="Clear All History" />
                </HBox>

            </children>
            <padding>
                <Insets bottom="30.0" left="20.0" right="20.0" top="30.0" />
            </padding>
        </VBox>
    </children>
</VBox>
